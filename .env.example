# Environment Configuration for Factory Management System
# Copy this file to .env and update the values

# Database Configuration
# For PostgreSQL (Production):
DATABASE_URL=postgresql://username:password@localhost:5432/factory_db

# For SQLite (Development - easier setup):
# DATABASE_URL=sqlite:///factory.db

# Flask Configuration
SESSION_SECRET=your-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# PostgreSQL Connection Details (if using PostgreSQL)
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=factory_db